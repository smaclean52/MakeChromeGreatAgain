{
  "manifest_version": 2,
  "name": "MakeAmericaGreatAgain",
  "version": "1",
  "background": {
    "scripts": ["background.js"]
  },

  "icons": { "16": "logo.png",
           "48": "logo.png",
          "128": "logo.png" 
          },

 "permissions": [
    "activeTab",
    "tabs",
    "https://ajax.googleapis.com/"
  ],

  
"content_scripts": [

    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["jquery-2.2.2.js", "content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "logo.png",
    "default_popup": "popup.html"
  }
}